<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.oscar.project2.MainActivity">


    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvPressure"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="49dp"
        android:id="@+id/tvTemp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:id="@+id/tvHumidity"
        android:layout_below="@+id/tvPressure"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <ImageView
        android:src="@drawable/humidity"
        android:id="@+id/iwHumidity"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_alignBottom="@+id/tvHumidity"
        android:layout_alignLeft="@+id/iwPressure"
        android:layout_alignStart="@+id/iwPressure" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:id="@+id/tvTimeStamp"
        android:layout_below="@+id/tvTemp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:src="@drawable/temp"
        android:id="@+id/iwTemp"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_above="@+id/tvTemp"
        android:layout_alignLeft="@+id/iwPressure"
        android:layout_alignStart="@+id/iwPressure" />

    <ImageView
        android:src="@drawable/pressure"
        android:id="@+id/iwPressure"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_above="@+id/tvTimeStamp"
        android:layout_toRightOf="@+id/btnAsyncTask"
        android:layout_toEndOf="@+id/btnAsyncTask" />

    <Button
        android:text="Volley"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnVolley"
        android:layout_above="@+id/btnAsyncTask"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="47dp" />

    <Button
        android:text="ASyncTask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="76dp"
        android:id="@+id/btnAsyncTask"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvPressure"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="32dp" />

    <TextView
        android:text="Information from sensors"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvInfo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
